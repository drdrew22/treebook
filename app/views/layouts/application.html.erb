<!DOCTYPE html>
<html>
<head>
  <title>Treebook</title>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  		<div class="container">
			<a class="navbar-brand" href="#">Treebook</a> 
			<ul class="nav navbar-nav">
				<li><%= link_to "All Statuses", statuses_path %></li>
			</ul>
			<ul class="nav pull-right">
				<% if user_signed_in? %>
					<span><%= link_to current_user.first_name, edit_user_registration_path %></span> | 
					<spane><%= link_to "Log Out", destroy_user_session_path, method: :delete %></span>
				<% else %>
					<span><%= link_to "Register", new_user_registration_path %></span>
					<span><%= link_to "Log in", new_user_session_path %></span>
				<% end %>
			</ul>
		</div>
	</nav>
	<div class="container">
		<% flash.each do |type, message| %>
			<div class="alert <%= flash_class type %>" role="alert">
				<%= message %>
			</div>
		<% end %>
		
		<%= yield %>
	</div>
	<nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
  		<div class="container">
    DREWCIF3R
  		</div>
	</nav>
</body>
</html>
